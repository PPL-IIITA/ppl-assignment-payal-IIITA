<?xml version="1.0" encoding="UTF-8"?>

<project name="q7" default="run" basedir=".">

   <description>Building Simple Java Applications Without An IDE</description>

   <target name="compile"

           description="Compile the Java code.">

      <javac srcdir="src"

             destdir="classes"

             debug="true"

      includeantruntime="false" />

   </target>

   <target name="run" depends="compile"

           description="Run the Java application.">

      <java classname="q7" fork="true">

         <classpath>

           <pathelement path="classes"/>

         </classpath>

      </java>

   </target>

<target name="javadocs" description="Generate JavaDoc API docs">

        <delete dir="docs" failonerror="false" />

        <mkdir dir="docs" />

        <javadoc destdir="docs">

 <fileset dir="."/>
        </javadoc>
    </target>


    

</project>